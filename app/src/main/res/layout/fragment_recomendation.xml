<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Recomendation"
    android:background="@drawable/style_for_windows">


    <Button
        android:id="@+id/btnCanselRecomend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/slytle_for_button"
        android:layout_margin="6dp"
        android:text="&#5130;"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#283030"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">



    <androidx.cardview.widget.CardView
        android:id="@+id/index_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#BDBDBD"
        >
        <TextView
            android:id="@+id/index"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:textColor="#DCDCDC"
            android:text="00"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="50sp"
            />
    </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="16dp">
    <TextView
        android:id="@+id/recomendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#43B61A"
        android:textSize="16sp"
        android:layout_margin="26dp"/>

        </ScrollView>
    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>