<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/items"
        app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/this_trening_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_photo"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#CC000000"
            android:layout_margin="8dp"
            >

            <ImageView
                android:id="@+id/img_client_trening_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_baseline_person_24"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cv_photo"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/title_all"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp"
            />

        <TextView
            android:id="@+id/tip_all"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Тип тренировки"
            android:layout_margin="4dp"

            />
        <TextView
            android:id="@+id/opisanie_all"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Краткое описание тренировки"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/countex_all"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Количество упражнений в тренировки"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/timetr_all"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Общее время тренировки"
            android:layout_margin="4dp"
            />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>